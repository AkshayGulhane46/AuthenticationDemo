<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="/css/home.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    </head>
    

    <div id="action-btns">
       

        <% if(locals.user) {%>
       
            <h1><%= user.name %></h1>
            <h1><%= user.email %></h1>
            
                <button id="logout-btn" > <a href="/users/destroy-session">Sign out </a></button>
            <%}else{%>
                <div id="logout">
                    <button id="logout-btn" > <a href="/users/sign-in">Sign in</a></button>
                    <button id="logout-btn"> <a href="/users/sign-up">Sign Up</a></button>
                </div>
        <%}%>
       
    </div>

            
    
</html>